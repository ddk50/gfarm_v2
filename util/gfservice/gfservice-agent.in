	rm -f $GFSD_PID_FILE
	rm -f $GFARM_CONF
	rm -f $GFSD_RC
	rm -f -r $SPOOL_DIR
	[ "X$GFSD_CONF" != X ] && rm -f $GFSD_CONF
	[ "X$USERMAP_FILE" != X ] && rm -f $USERMAP_FILE

	log_debug "end subcmd_unconfig_gfsd"
}

#
