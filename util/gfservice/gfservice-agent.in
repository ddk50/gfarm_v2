		GRID_PROXY_INIT=grid-proxy-init
	else
		GRID_PROXY_INIT="$GLOBUS_LOCATION/grid-proxy-init"
	fi

	ARGS=`get_param args`
	log_debug "subcmd_gfcmd: execute $GRID_PROXY_INIT $ARGS"
	$GRID_PROXY_INIT $ARGS
