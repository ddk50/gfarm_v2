<refentry id="gfjournaladmin.1">

<refentryinfo><date>21 Jun 2012</date></refentryinfo>

<refmeta>
<refentrytitle>gfjournaladmin</refentrytitle>
<manvolnum>1</manvolnum>
<refmiscinfo>Gfarm</refmiscinfo>
